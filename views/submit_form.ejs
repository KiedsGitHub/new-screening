<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="submit_form" appConnect="local" components="{dmxNotifications:{}}" -->
<dmx-notifications id="notifies1"></dmx-notifications>
<meta name="ac:route" content="/submit_form">

<div class="container py-5">
    <div class="card shadow-lg p-5 mx-auto" style="max-width: 850px; border-radius: 15px; background: linear-gradient(135deg, #e0eafc, #cfdef3);">
        <h2 class="text-center mb-4" style="font-weight: 700; color: #35495e;">Employee Requisition Form</h2>

        <form id="submitForm" is="dmx-serverconnect-form" method="post" action="/api/action/submitRequest" dmx-on:success="notifies1.success('Form Submitted! Please wait the respond');submitForm.reset()">
            <!-- Requester Section -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="requesterName" class="form-label" style="font-weight: 600;">Requester Name</label>
                    <input type="text" id="requesterName" name="requesterName" class="form-control border-0 shadow-sm" placeholder="Enter requester name" required style="border-radius: 8px;">
                </div>
                <div class="col-md-6">
                    <label for="submitDate" class="form-label" style="font-weight: 600;">Submit Date</label>
                    <input type="date" id="submitDate" name="submitDate" class="form-control border-0 shadow-sm" required style="border-radius: 8px;">
                </div>
            </div>

            <!-- Detail Section -->
            <div class="border-top border-3 border-primary mb-4 pt-3">
                <h5 style="font-weight: 700; color: #2c3e50;">Details</h5>
            </div>

            <!-- Requisition Type -->
            <div class="row mb-3">
                <label class="form-label" style="font-weight: 600;">Requisition Type</label>
                <div class="col-md-6">
                    <input type="radio" id="newHeadcount" name="requisitionType" value="New Headcount" required>
                    <label for="newHeadcount" style="color: #2c3e50;">New Headcount</label>
                </div>
                <div class="col-md-6">
                    <input type="radio" id="replacement" name="requisitionType" value="Replacement">
                    <label for="replacement" style="color: #2c3e50;">Replacement</label>
                </div>
            </div>

            <!-- Justification -->
            <div class="form-group mb-3">
                <label for="justification" class="form-label" style="font-weight: 600;">Justification</label>
                <textarea id="justification" name="justification" class="form-control border-0 shadow-sm" rows="3" placeholder="Enter justification" style="border-radius: 8px;"></textarea>
            </div>

            <!-- Job Grade -->
            <div class="row mb-3">
                <label class="form-label" style="font-weight: 600;">Job Grade</label>
                <div class="col-md-2">
                    <input type="radio" id="e1" name="jobGrade" value="E1">
                    <label for="e1" style="color: #2c3e50;">E1</label>
                </div>
                <div class="col-md-2">
                    <input type="radio" id="e2" name="jobGrade" value="E2">
                    <label for="e2" style="color: #2c3e50;">E2</label>
                </div>
                <div class="col-md-2">
                    <input type="radio" id="e3" name="jobGrade" value="E3">
                    <label for="e3" style="color: #2c3e50;">E3</label>
                </div>
                <div class="col-md-2">
                    <input type="radio" id="e4" name="jobGrade" value="E4">
                    <label for="e4" style="color: #2c3e50;">E4</label>
                </div>
                <div class="col-md-2">
                    <input type="radio" id="e5" name="jobGrade" value="E5">
                    <label for="e5" style="color: #2c3e50;">E5</label>
                </div>
                <div class="col-md-2">
                    <input type="radio" id="e6" name="jobGrade" value="E6">
                    <label for="e6" style="color: #2c3e50;">E6</label>
                </div>
            </div>

            <!-- Job Description -->
            <div class="form-group mb-3">
                <label for="jobDescription" class="form-label" style="font-weight: 600;">Job Description</label>
                <input type="text" id="jobDescription" name="jobDescription" class="form-control border-0 shadow-sm" placeholder="Enter job description" required style="border-radius: 8px;">
            </div>

            <!-- Job Title and Report To -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="jobTitle" class="form-label" style="font-weight: 600;">Job Title</label>
                    <input type="text" id="jobTitle" name="jobTitle" class="form-control border-0 shadow-sm" placeholder="Enter job title" required style="border-radius: 8px;">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="reportTo" class="form-label" style="font-weight: 600;">Report To</label>
                    <input type="text" id="reportTo" name="reportTo" class="form-control border-0 shadow-sm" placeholder="Enter report to" required style="border-radius: 8px;">
                </div>
            </div>

            <!-- Require Date -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label for="requireDate" class="form-label" style="font-weight: 600;">Require Date</label>
                    <input type="date" id="requireDate" name="requireDate" class="form-control border-0 shadow-sm" required style="border-radius: 8px;">
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg w-50" style="border-radius: 25px; background-color: #35495e; font-weight: bold;">Submit</button>
            </div>
        </form>
    </div>
</div>