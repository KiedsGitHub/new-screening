<!-- Modal Login -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-4">
                <h2 class="text-center mb-4">Welcome Back</h2>
                <p class="text-center text-muted mb-4">Login to your account</p>

                <!-- Form Login -->
                <form id="loginForm">
                    <!-- Pilihan Role dengan Ikon -->
                    <div class="form-group mb-3">
                        <label for="role" class="form-label">Role</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            <select id="role" class="form-select" required>
                                <option value="BU">Business Unit</option>
                                <option value="Manager">Manager</option>
                                <option value="Candidate">Candidate</option>
                            </select>
                        </div>
                    </div>

                    <!-- Medan Email dengan Ikon -->
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" id="email" class="form-control" placeholder="Enter your email" required>
                        </div>
                    </div>

                    <!-- Medan Password dengan Ikon -->
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" id="password" class="form-control" placeholder="Enter your password" required>
                        </div>
                    </div>

                    <!-- Butang Login -->
                    <button type="submit" class="btn btn-primary w-100 py-2">Login</button>

                    <!-- Link ke halaman Register -->
                    <p class="text-center text-muted mt-3">Don't have an account? <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal">Register here</a>.</p>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Register -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-4">
                <h2 class="text-center mb-4">Create Your Account</h2>
                <p class="text-center text-muted mb-4">Please fill in the details to register.</p>

                <!-- Form Register -->
                <form id="registerForm">
                    <!-- Pilihan Role dengan ikon -->
                    <div class="form-group mb-3">
                        <label for="role" class="form-label">Role</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            <select id="role" class="form-select" required>
                                <option value="BU">Business Unit</option>
                                <option value="Manager">Manager</option>
                                <option value="Candidate">Candidate</option>
                            </select>
                        </div>
                    </div>

                    <!-- Nama dengan ikon -->
                    <div class="form-group mb-3">
                        <label for="name" class="form-label">Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" id="name" class="form-control" placeholder="Enter your name" required>
                        </div>
                    </div>

                    <!-- Email dengan ikon -->
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" id="email1" class="form-control" placeholder="Enter your email" required>
                        </div>
                    </div>

                    <!-- Password dengan ikon -->
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" id="password1" class="form-control" placeholder="Enter your password" required>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="password1" class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" id="password" class="form-control" placeholder="Confirm your password" required>
                        </div>
                    </div>

                    <!-- Butang Register -->
                    <button type="submit" class="btn btn-primary w-100 py-2">Create Account</button>

                    <!-- Link ke Login -->
                    <p class="text-center text-muted mt-3">Already have an account? <a href="#" data-bs-toggle="modal" data-bs-target="#loginModal" data-bs-dismiss="modal">Login here</a>.</p>
                </form>
            </div>
        </div>
    </div>
</div>